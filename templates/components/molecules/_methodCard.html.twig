<div class="m_MethodCard">
	<div class="m_MethodCard_icon">
		<i class="{{ icon }}"></i>
	</div>
	<div class="m_MethodCard_content">
		<h4 class="m_MethodCard_title">{{ title }}</h4>
		<ul class="m_MethodCard_list">
			{% for item in description %}
				<li class="m_MethodCard_item">
					<i class="bi bi-check-lg"></i>
					<span>{{ item }}</span>
				</li>
			{% endfor %}
		</ul>
	</div>
</div>
