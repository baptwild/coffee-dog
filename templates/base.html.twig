<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Le Caf√© des Chiens
			{% endblock %}
		</title>
		<link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% include 'components/layout/_header.html.twig' with { isTransparent: isTransparent|default(false) } %}
		{% include 'components/molecules/_mobileMenu.html.twig' %}

		{% block body %}
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}

		{% endblock %}

		{% include 'components/layout/_footer.html.twig' %}
	</body>
</html>
