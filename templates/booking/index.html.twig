{% extends 'base.html.twig' %}

{% block title %}Liste des réservations
{% endblock %}

{% block body %}
	<section class="o_Booking l_Wrapper">
		<h1 class="o_Booking_title">Mes réservations</h1>

		<table class="m_Table">
			<thead>
				<tr>
					<th>Chien</th>
					<th>Statut de la réservation</th>
					<th>Date de la réservation</th>
					<th>Heure d'arrivée</th>
					<th>Heure de départ</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for booking in bookings %}
					<tr>
						<td>{{ booking.dog.name is defined and booking.dog.name is not null ? booking.dog.name : '—' }}</td>
						<td>{{ booking.status }}</td>
						<td>{{ booking.effectiveDate|date('d/m/Y') }}</td>
						<td>{{ booking.arrivalDatetime|date('Y-m-d H:i') }}</td>
						<td>{{ booking.departureDatetime|date('Y-m-d H:i') }}</td>
						<td>
							{% include 'components/atoms/_button.html.twig' with {
								label: 'Modifier',
								class: 'a_Button-primary',
								url: path('app_booking_edit', {id: booking.id})
							} %}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">Aucune réservation trouvée.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{% include 'components/atoms/_button.html.twig' with {
         label: 'Créer une nouvelle réservation',
         class: 'a_Button-primary',
			url: path('app_booking_new')
      } %}
	</section>
{% endblock %}
